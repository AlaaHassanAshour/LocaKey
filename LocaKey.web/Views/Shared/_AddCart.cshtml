@model IEnumerable<LocaKey.Data.Entity.CartCookies>
@foreach (var item in Model)
{
    <div class="product">
        <div class="row">
            <div class="col-md-3">
                <img src="~/Images/@item.Product.imege" class="imgsize" alt="Product">
            </div>
            <div class="col-md-8">
                <div class="cart-item-product-info">
                    <h4 class="cart-item-product-title">@item.Product.name_ar</h4>

                    <span class="text-primary w46 product-price product-checkout-total-amount" price-data="9.99" item-data="4"> @item.Product.price_ar</span>

                </div>

            </div>
            <button type="button" class="btn-close text-reset" data-bs-dismiss="product" aria-label="Close"></button>
        </div>
    </div>
}
<div class="subtotal">
    <div class="row">
        <div class="col-md-6">
            <h5>Subtotal</h5>
        </div>
        <div class="col-md-6 text-right">
            <p>@ViewBag.totalprice $</p>
        </div>
    </div>
</div>
<a  asp-controller="Home" asp-action="Index">
<button class="addcart countinueshoping">countinue shoping</button>
</a>
<a asp-action="CartShopping" asp-controller="Cart">
    <button class="addcart countinueshoping viewcart">Viw cart</button>
</a>
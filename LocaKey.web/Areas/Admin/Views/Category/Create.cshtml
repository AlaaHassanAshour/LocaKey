@model LocaKey.Core.DTO.CategoryDTO


<div class="card card-custom gutter-b">
    <div class="card-header">
        <div class="card-title">
            <h3 class="card-label">
                اضافة تصنيف
                <small>ادارة اضافة تصنيف</small>
            </h3>
        </div>

    </div>
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="nameAr" class="control-label"></label>
                        <input asp-for="nameAr" class="form-control" />
                        <span asp-validation-for="nameAr" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="nameEn" class="control-label"></label>
                        <input asp-for="nameEn" class="form-control" />
                        <span asp-validation-for="nameEn" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="nameFr" class="control-label"></label>
                        <input asp-for="nameFr" class="form-control" />
                        <span asp-validation-for="nameFr" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="حفظ" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>

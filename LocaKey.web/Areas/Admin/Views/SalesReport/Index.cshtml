@model IEnumerable<LocaKey.Core.ViweModel.SalesReportVM>

@{
    ViewData["Title"] = "Index";
}
@if (Model.Any())
{
    <div class="card card-custom gutter-b">
        <div class="card-header">
            <div class="card-title">
                <h3 class="card-label">
                SalesReport
                    <small>Manege  Sales Report</small>
                </h3>
            </div>
            <div class="card-toolbar">
               @* <a asp-action="Create" class="btn btn-success showcreate" data-toggle="modal">
                    <i class="flaticon2-cube"></i> Create  Sales Report
                </a>*@
            </div>
        </div>
        <div class="card-body">


            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Id)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.priceWitheBuying)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.productBuying)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.basePrice)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.count)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.total)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.priceWitheBuying)
                            </td>
                                <td>
                                @Html.DisplayFor(modelItem => item.priceWitheBuying)
                            </td>
                                <td>
                                @Html.DisplayFor(modelItem => item.basePrice)
                            </td>
                                <td>
                                @Html.DisplayFor(modelItem => item.count)
                            </td>
                                <td>
                                @Html.DisplayFor(modelItem => item.total)
                            </td>
                           
                        </tr>
                    }



                </tbody>
            </table>
        </div>

    </div>

}
else
{
    <div class="card-toolbar">
        <a asp-action="Create" class="btn btn-success showcreate" data-toggle="modal">
            <i class="flaticon2-cube"></i> Create Evant Category
        </a>
    </div>
    <hr />
    <hr />

    <div class="alert alert-warning">

        No Data !!
    </div>

}
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog-centered modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-success text-light justify-content-center">
                <h5 class="modal-title"></h5>
            </div>
            <div class="modal-body justify-content-center" id="myModalContent">

            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" style="width:20%" data-dismiss="modal">
                    Close
                </button>
            </div>
        </div>
    </div>
</div>